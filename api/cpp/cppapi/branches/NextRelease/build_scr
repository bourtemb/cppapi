#!/bin/bash

#INSTALL_DIR=/segfs/tango/tmp/ci
INSTALL_DIR=/tmp/ci

#
# Set some variables according to OS
#

for i in $NODE_LABELS
do
	echo $i
	if [ $i = "ubuntu10.04" ]
	then
		echo "Ubuntu 10.04 OS"
		OS_SPEC="linux=1 ubuntu=1"
		CPU_BUS="64bits=1"
		MAKE_PATH="make"
	fi
	
	if [ $i = "solaris10" ]
	then
		echo "Solaris 10 OS"
		OS_SPEC="_solaris=1"
		MAKE_PATH="/usr/local/bin/make"
	fi

	if [ $i = "Windows_VC9" ]
	then
		echo "Windows VC9"
		OS_SPEC="Windows"
		MAKE_PATH="devenv"
	fi
	
	if [ $i = "redhate5" ]
	then
		echo "redhate 5 OS"
		OS_SPEC="linux=1"
		CPU_BUS="64bits=1"
		MAKE_PATH="make"
	fi
done

#
# Set library type
#

if [ $OS_SPEC = "Windows" ]
then
	if [ $LIBTYPE = "shared" ]
	then
		LIBNAME=tango_dll
		OUTFILEBASE="devenv_dll"
	else
		LIBNAME=tango_static
		OUTFILEBASE="devenv_static"
	fi
else
	if [ $LIBTYPE = "shared" ]
	then
		LIBNAME=libtango.so
	else
		LIBNAME=libtango.a
	fi
fi

#
# Set debug type
#

if [ $OS_SPEC = "Windows" ]
then
	if [ $DEBUGMODE = "debug" ]
	then
		DEBUG_MODE="debug"
		OUTFILE=$OUTFILEBASE"_debug"
	else
		DEBUG_MODE="release"
		OUTFILE=$OUTFILEBASE"_release"
	fi
else
	if [ $DEBUGMODE = "debug" ]
	then
		DEBUG_MODE="debug=1"
	fi
fi

#
# Build library
#

if [ $OS_SPEC = "Windows" ]
then
	MAKE_CMD="$MAKE_PATH /build $DEBUG_MODE /project $LIBNAME /out $OUTFILE winnt_lib.sln"
	export PATH=$PATH:/cygdrive/c/Program\ Files/Microsoft\ Visual\ Studio\ 9.0/Common7/IDE
	echo $PATH
	cd NextRelease/win32/tango_vc9
	rm -f $OUTFILE
else
	MAKE_CMD="$MAKE_PATH prefix=$INSTALL_DIR $OS_SPEC $CPU_BUS $DEBUG_MODE $LIBNAME install_include install_link"

	cd NextRelease
fi

echo $MAKE_CMD
$MAKE_CMD
RET=$?

if [ $OS_SPEC = "Windows" ]
then
	/bin/cat $OUTFILE
fi

if [ $RET != 0 ]
then
	exit -1
fi
